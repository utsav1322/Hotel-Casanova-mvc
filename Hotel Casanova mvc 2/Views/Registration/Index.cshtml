
@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/Validation.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />



<div class="container" style="margin-top:10%">

    <div class="row">

        <h3 class="text-center">Registration</h3>


        <form id="Registration">





            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input class="form-control" type="text" name="Username" id="username" placeholder="UserName" onblur="UNameValidation()" />
                    <span id="usernameerror" style="visibility:hidden"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input class="form-control" type="text" name="Firstname" id="firstname" placeholder="FirstName" onblur="FirstNameValidation()" />
                    <span id="firstnameerror" style="visibility:hidden"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input class="form-control" type="text" name="Lastname" id="lastname" placeholder="LastName" onblur="LastNameValidation()" />
                    <span id="lastnameerror" style="visibility:hidden"></span>

                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                    <input class="form-control" type="email" name="Email" id="email" placeholder="Email Id" onblur="EmailValidation()" />
                    <span id="emailerror" style="visibility:hidden"></span>

                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
                    <input class="form-control" type="tel" name="Mobile" id="mobile" placeholder="MobileNo" onblur="PhonenoValidation()" />
                    <span id="mobileerror" style="visibility:hidden"></span>

                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input class="form-control" type="password" name="Password" id="password" placeholder="Password" onblur="PasswordValidation()" />
                    <span id="passworderror" style="visibility:hidden"></span>

                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input class="form-control" type="password" name="ConfirmPassword" id="confirmpassword" placeholder="Confirm Password" onblur="ConformPasswordValidation()" />
                    <span id="confirmpassworderror" style="visibility:hidden"></span>

                </div>
            </div>

            <input type="file" id="SelectImage"/><br />

            @*<input id="fileUpload" type="file" runat="server"/><br />*@


        </form>

        <div class="form-group">
            <button class="btn form-control" type="submit" onclick="Register()" ><i class="glyphicon glyphicon-registration-mark"></i> Sing up</button>
        </div>
        <div class="form-group">
            <p>Already Register?<a style="cursor:pointer" href="~/Login/Index">Login</a></p>

           <span id="message1" class="glyphicon glyphicon-align-right alert alert-success" style="visibility:hidden">
            <strong>Your Registration Is Completed Succefully!!!</strong>
           </span>

           <span id="message2" class="glyphicon glyphicon-align-right alert alert-success" style="visibility:hidden">
            <strong>Error Message! Your Registration Is Not Complete</strong>
           </span>                  
        </div>

    </div>
</div>
